{% extends 'layout.twig' %}

{% import 'messagesysteme.twig' as msgSyst %}
{% import 'champs.twig' as form %}

{% block content %}
	<div class="row">
		<div class="col-md-12">

			{% if trad.dMesgSysteme %}
				{{ msgSyst.messageAlerte(trad.dMesgTitreSysteme, trad.dMesgSysteme) }}
			{% endif %}

			<div class="box">
				<div class="box-header">
					<h3 class="box-title">{{ trad.titre_ldap }}</h3>
				</div>
				<!-- /.box-header -->
				
				<div class="box-body no-padding">

					<form action="?p=admin_config_ldap" method="post">

						<input type="hidden" name="p" value="admin_config_ldap" />
						<input type="hidden" name="etape" value="0" />
						<input type="hidden" name="valid" value="{{ trad.dValid }}" />
						
						<h3>Enregistrement de la configuration</h3>

						{{ trad.dResultat |raw }}

						<div style="text-align:center;">
							<input type="submit" name="Valider" value="Terminer" class="btn btn-success btn-md" />
						</div>

					</form>

				</div>
			</div>

		</div>
	</div>
{% endblock %}

{% block javascript %}
{% endblock %}
</script>
<script src="../vendor/almasaeed2010/adminlte/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="../vendor/almasaeed2010/adminlte/dist/js/adminlte.js"></script>


{% block javascript %}{% endblock %}
</body>
</html>
{% extends 'layout.twig' %}

{% block css %}
{% endblock %}

{% import 'messagesysteme.twig' as msgSyst %}

{% block content %}
	<div class="row">

		<div class="col-md-12">

			<div class="box">
				<div class="box-header">
					<h3 class="box-title">{{ trad.titre_config_Jours_Cycles }}</h3>
				</div>
				<!-- /.box-header -->

				<div class="box-body no-padding">
					<div class="col-md-4"><a href="?p=admin_calend_jour_cycle1" class="btn btn-primary btn-block">{{ trad.admin_config_calend1 }}</a></div>
					<div class="col-md-4"><a href="?p=admin_calend_jour_cycle2" class="btn btn-success btn-block">{{ trad.admin_config_calend2 }}</a></div>
					<div class="col-md-4"><a href="?p=admin_calend_jour_cycle3" class="btn btn-primary btn-block">{{ trad.admin_config_calend3 }}</a></div>
				</div>

				<hr>

				<p>{{ trad.les_journees_cochees_sont_valides }}</p>
				<p>{{ trad.nombre_jours_Jours_Cycles }} {{ trad.deux_points }} <b>{{ settings.nombre_jours_Jours_Cycles }}</b></p>
				<p>{{ trad.debut_Jours_Cycles }} {{ trad.deux_points }} <b>{{ settings.jour_debut_Jours_Cycles }}</b></p>
				<p>{{ trad.explication_Jours_Cycles2 }}</p>

				<table>
					{% for jour in jourssemaines  %}
						<tr>
							<td><span class="small"><a href="?p=admin_calend_jour_cycle2" onclick="setCheckboxesGrr(document.getElementById('formulaire'), true, '{{ jour }}'); return false;">{{ trad.check_all_the }} {{ jour }}s</a></span></td>
							<td><span class="small"><a href="?p=admin_calend_jour_cycle2" onclick="setCheckboxesGrr(document.getElementById('formulaire'), false, '{{ jour }}' ); return false;">{{ trad.uncheck_all_the }} {{ jour }}s</a></span></td>
						</tr>
					{% endfor %}
					<tr>
						<td><span class="small"><a href="?p=admin_calend_jour_cycle2" onclick="setCheckboxesGrr(document.getElementById('formulaire'), false, 'all'); return false;">{{ trad.uncheck_all_ }}</a></span></td>
					</tr>
				</table>

				<form action="?p=admin_calend_jour_cycle2" method="post" id="formulaire">

					<input type="hidden" name="p" value="admin_calend_jour_cycle2" />
					<input type="hidden" name="page_calend" value="2" />
					<input type="hidden" name="record" value="yes" />

					<table cellspacing="20">
						{{ trad.dCalendrier |raw }}
					</table>

					<div style="text-align:center;">
						<input class="btn btn-primary" type="submit" name="valider" value="{{ trad.save }}" />
					</div>
				</form>
			</div>
		</div>
	</div>	

{% endblock %}

{% block javascript %}
<script>
	function setCheckboxesGrr(elts, do_check, day)
	{
		for (i = 0; i < elts.length; i++)
		{
			type = elts.type;
			if (type="checkbox")
			{
				if ((elts[i].value== day) || (day=='all'))
				{
					elts[i].checked = do_check;
				}
			}
		}
		return true;
	}

	function setCheckboxesGrrName(elts, do_check, day)
	{
		for (i = 0; i < elts.length; i++)
		{
			type = elts.type;
			if (type="checkbox")
			{
				if (elts[i].name== day)
				{
					elts[i].checked = do_check;
				}
			}
		}
		return true;
	}
</script>
{% endblock %}
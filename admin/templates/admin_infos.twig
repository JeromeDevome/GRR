{% extends 'layout.twig' %}

{% import 'messagesysteme.twig' as msgSyst %}

{% block css %}
{% endblock %}

{% block content %}
	<div class="row">
		<div class="col-md-12">

            <div class="card card-primary card-outline card-tabs">
				<div class="card-header p-0 pt-1 border-bottom-0">
				  <ul class="nav nav-tabs" id="custom-tabs-three-tab" role="tablist">
					<li class="nav-item"><a class="nav-link active" href="#grr" data-toggle="tab">Infos GRR</a></li>
					<li class="nav-item"><a class="nav-link" href="#serveur" data-toggle="tab">Serveur</a></li>
					<li class="nav-item"><a class="nav-link" href="#infosphp" data-toggle="tab">Infos PHP</a></li>
					<li class="nav-item"><a class="nav-link" href="#fichierconfig" data-toggle="tab">Fichier configuration</a></li>
					<li class="pull-right"><button type="button" id="copy" class="btn btn-info pull-right btn-block btn-sm">Copier infos pour aide</button></li>
				  </ul>
				</div>
				<div class="card-body">
				<div class="tab-content">
					<!-- GRR -->
					<div class="tab-pane active" id="grr">
						<ul class="list-group list-group-unbordered">
							<li class="list-group-item"><div class="row"><p class="col-sm-6">{{ trad.num_version }}</p><b>{{ trad.dNum_version }}</b></div></li>
							<li class="list-group-item"><div class="row"><p class="col-sm-6">{{ trad.num_versionbdd }}</p><b>{{ trad.dNum_versionbdd }}</b></div></li>
							<li class="list-group-item"><div class="row"><p class="col-sm-6">{{ trad.prefixe }}</p><b>{{ trad.dPrefixe }}</b></div></li>
							<li class="list-group-item"><div class="row"><p class="col-sm-6">{{ trad.maj_bdd }}</p><b>{{ trad.dMaj_bdd |raw }} </b></div></li>
							<li class="list-group-item"><div class="row"><p class="col-sm-6">{{ trad.maj_recherche_grr }}</p><b>{{ trad.dMaj_SiteGRR |raw }}&nbsp;</b></div></li>
							<li class="list-group-item"><p class="col-sm-6"><b>Infos support </b><i>(A fournir pour toute demande d'aide)</i> :</p><textarea id="to-copy" rows="8" cols="40">
{{ trad.num_version }} : {{ trad.dNum_version }}
{{ trad.num_versionbdd }} : {{ trad.dNum_versionbdd }}
{{ trad.system }} : {{ trad.dSystem }}
Version PHP : {{ trad.dVersionPHP }}
{{ trad.database }} : {{ trad.dDatabase }} => {{ trad.dVersionBDD }}
Time : {{ trad.dTime }}
Timezone : {{ trad.dTimezone }}</textarea></li>
						</ul>
						<!-- Infos pour support -->

						<!-- Fin infos pour support -->
					</div>

					<!-- Serveur -->
					<div class="tab-pane" id="serveur">
						<ul class="list-group list-group-unbordered">
							<li class="list-group-item"><div class="row"><p class="col-sm-6">{{ trad.system }}</p><b>{{ trad.dSystem }}</b></div></li>
							<li class="list-group-item"><div class="row"><p class="col-sm-6">Version PHP</p><b><small class="badge pull-left {{ trad.dCouleurVersionPHP }}">{{ trad.dVersionPHP }}</small>&nbsp;</b></div></li>
							<li class="list-group-item"><div class="row"><p class="col-sm-6">{{ trad.database }}</p><b>{{ trad.dDatabase }}</b></div></li>
							<li class="list-group-item"><div class="row"><p class="col-sm-6">Version BDD</p><b><small class="badge pull-left {{ trad.dCouleurVersionMySQL }}">{{ trad.dVersionBDD }}</small>&nbsp;</b></div></li>

							<li class="list-group-item"><b class="col-sm-12">Dossiers : </b></li>
							<li class="list-group-item"><div class="row"><p class="col-sm-6">Existence dossier "installation"</p><b><small class="badge pull-left {% if trad.dDossierInstallation == 1 %}bg-orange{% else %}bg-green{% endif %}">{% if trad.dDossierInstallation == 1 %}Existant - Nous recommandons de le supprimer{% else %}Innexistant{% endif %}</small>&nbsp;</b></div></li>
							<li class="list-group-item"><div class="row"><p class="col-sm-6">Droits dossier "personnalisation/images/logos"</p><b><small class="badge pull-left {% if trad.dDossierImgLogosEcriture == 1 %}bg-green{% else %}bg-red{% endif %}">Ecriture</small>&nbsp;</b></div></li>
							<li class="list-group-item"><div class="row"><p class="col-sm-6">Droits dossier "personnalisation/images/ressources"</p><b><small class="badge pull-left {% if trad.dDossierImgRessourcesEcriture == 1 %}bg-green{% else %}bg-red{% endif %}">Ecriture</small>&nbsp;</b></div></li>
							<li class="list-group-item"><div class="row"><p class="col-sm-6">Droits dossier "export"</p><b><small class="badge pull-left {% if trad.dDossierExportEcriture == 1 %}bg-green{% else %}bg-red{% endif %}">Ecriture</small>&nbsp;</b></div></li>
							<li class="list-group-item"><div class="row"><p class="col-sm-6">Droits dossier "temp"</p><b><small class="badge pull-left {% if trad.dDossierTempEcriture == 1 %}bg-green{% else %}bg-red{% endif %}">Ecriture</small>&nbsp;</b></div></li>
							<li class="list-group-item"><div class="row"><p class="col-sm-6">Droits dossier "personnalisation/modules"</p><b><small class="badge pull-left {% if trad.dDossierModulesEcriture == 1 %}bg-green{% else %}bg-red{% endif %}">Ecriture</small>&nbsp;</b></div></li>

							<li class="list-group-item"><b class="col-sm-12">Temps : </b></li>
							<li class="list-group-item"><div class="row"><p class="col-sm-6">Time</p><b>{{ trad.dTime }}</b></div></li>
							<li class="list-group-item"><div class="row"><p class="col-sm-6">Date du serveur (Jour-Mois-Annee)</p><b>{{ trad.dDate }}</b></div></li>
							<li class="list-group-item"><div class="row"><p class="col-sm-6">Heure du serveur</p><b>{{ trad.dHeure }}</b></div></li>
							<li class="list-group-item"><div class="row"><p class="col-sm-6">Timezone (date_default_timezone_set)</p><b>{{ trad.dTimezone }}</b></div></li>
						</ul>
					</div>

					<!-- Infos PHP -->
					<div class="tab-pane" id="infosphp">
						
							{{ infosPHP |raw }}

					</div>

					<!-- Fichier Config -->
					<div class="tab-pane" id="fichierconfig">
						<ul class="list-group list-group-unbordered">
							{{ trad.dInfosConfigVar |raw }}
						</ul>
					</div>
				</div>
				</div>
			</div>
		</div>
	</div>
	
{% endblock %}

{% block javascript %}
	<script>
		var toCopy  = document.getElementById( 'to-copy' ),
		btnCopy = document.getElementById( 'copy' );
		btnCopy.addEventListener( 'click', function(){
			toCopy.select();
			document.execCommand( 'copy' );
			return false;
		} );
	</script>
{% endblock %}